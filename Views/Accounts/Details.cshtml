@model WebsiteBanCaPhe.Models.Account

@{
    ViewData["Title"] = "Details";
}

<div style="max-width: 400px; margin: 0 auto; padding: 20px; background-color: #f9f9f9; border: 2px solid #4bb6b7; border-radius: 10px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); text-align: left;">
    <h4 style="color: #4bb6b7; text-align: center; margin-bottom: 15px;">Tài khoản</h4>
    <hr style="border-color: #4bb6b7;" />
    <dl class="dl-horizontal">
        <dt style="font-weight: bold; margin-bottom: 5px; color: #333; text-align: left;">
            Số điện thoại
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt style="font-weight: bold; margin-bottom: 5px; color: #333; text-align: left;">
            Tên đầy đủ
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt style="font-weight: bold; margin-bottom: 5px; color: #333; text-align: left;">
            Giới tính
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Gender)
        </dd>
    </dl>
</div>

<div style="margin-top: 10px; text-align: center;">
    <a href="/Accounts/Edit" style="display: inline-block; padding: 10px 20px; text-decoration: none; color: #fff; background-color: #4bb6b7; border-radius: 5px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">Edit</a>
</div>

