@model WebsiteBanCaPhe.Models.CartDetail

@{
    ViewData["Title"] = "Delete";
}

<h3 style="color: #4bb6b7; text-align: center; margin-bottom: 15px;">Bạn có chắc muốn xóa ?</h3>
<div style="max-width: 400px; margin: 0 auto; padding: 20px; background-color: #f9f9f9; border: 2px solid #4bb6b7; border-radius: 10px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); text-align: left;">
    <h4 style="color: #4bb6b7; text-align: center; margin-bottom: 15px;">Chi tiết giỏ hàng</h4>
    <hr style="border-color: #4bb6b7;"/>
    <dl class="dl-horizontal">
        <dt style="font-weight: bold; margin-bottom: 5px; color: #333; text-align: left;">
            Giỏ hàng
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cart.CartId)
        </dd>
        <dt style="font-weight: bold; margin-bottom: 5px; color: #333; text-align: left;">
            Sản phẩm
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Product.Branch)
        </dd>
        <dt style="font-weight: bold; margin-bottom: 5px; color: #333; text-align: left;">
            Số lượng
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt style="font-weight: bold; margin-bottom: 5px; color: #333; text-align: left;">
           Tổng giá tiền
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CartDetailId" />
        <input type="submit" value="Xóa" class="btn btn-default" style="text-decoration: none; background-color: #4bb6b7; border: 1px solid #4bb6b7; border-radius: 5px; color: #fff; padding: 10px 20px;" />
        <a asp-action="Index" style="text-decoration: none; background-color: #4bb6b7; border: 1px solid #4bb6b7; border-radius: 5px; color: #fff; padding: 10px 20px;">Quay lại danh sách</a>
    </form>
</div>
