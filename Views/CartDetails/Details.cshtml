@model WebsiteBanCaPhe.Models.CartDetail

@{
    ViewData["Title"] = "Details";
}

<div style="max-width: 400px; margin: 0 auto; padding: 20px; background-color: #f9f9f9; border: 2px solid #4bb6b7; border-radius: 10px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); text-align: left;">
<h4 style="color: #4bb6b7; text-align: center; margin-bottom: 15px;">Chi tiết giỏ hàng</h4>
<hr style="border-color: #4bb6b7;" />
    <dl class="dl-horizontal">
        <dt>
            Sản phẩm
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Product.ProductName)
        </dd>
        <dt>
           Số lượng
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt>
            Tổng giá tiền
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>
    </dl>
</div>
<div style="text-align: center; margin-top: 20px;">
    <a asp-action="Edit" asp-route-id="@Model.CartDetailId" style="text-decoration: none; background-color: #4bb6b7; border: 1px solid #4bb6b7; border-radius: 5px; color: #fff; padding: 10px 20px;">Sửa</a>
    <a asp-action="Index" style="text-decoration: none; background-color: #4bb6b7; border: 1px solid #4bb6b7; border-radius: 5px; color: #fff; padding: 10px 20px;">Trở lại danh sách</a>
</div>
