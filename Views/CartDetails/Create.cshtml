@model WebsiteBanCaPhe.Models.CartDetail

@{
    ViewData["Title"] = "Create";
}

<h4 style="color: #4bb6b7; text-align: center; margin-bottom: 15px;">Chi tiết giỏ hàng</h4>
<hr style="border-color: #4bb6b7;" />
<div class="row" style="margin: 20px 0; display: flex; justify-content: center; align-items: center;">
    <div class="col-md-4" style="margin: 0 auto;">
        <form asp-action="Create" style="max-width: 300px; padding: 20px; background-color: #f9f9f9; border: 2px solid #4bb6b7; border-radius: 10px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label" style="color: #333; text-align:center; ">Id sản phẩm</label>
                <select asp-for="ProductId" class ="form-control" asp-items="ViewBag.ProductId"></select>
            </div>
            <div class="form-group">
                <label class="control-label" style="color: #333; text-align:center; ">Số lượng</label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group" style="text-align: center; margin-top: 20px;">
                <input type="submit" value="Tạo" class="btn btn-primary" style="background-color: #4bb6b7; border: 1px solid #4bb6b7; border-radius: 5px; box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);" />
            </div>

            <div style="text-align: center; margin-top: 20px;">
    <a asp-action="Index" class="btn btn-secondary" style="text-decoration: none; background-color: #4bb6b7; border: 1px solid #4bb6b7; border-radius: 5px; color: #fff; padding: 10px 20px;">Trở lại danh sách</a>
</div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
