@model WebsiteBanCaPhe.Models.UserOrder
@{
    var cartDetails = ViewBag.CartDetails as List<WebsiteBanCaPhe.Models.CartDetail>;
    var cartTotalValue = ViewBag.CartTotalValue;
}
<!DOCTYPE html>
<html lang="en">
<head>
	<!-- Google font -->
	<link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">

	<!-- Bootstrap -->
	<link type="text/css" rel="stylesheet" href="/css/bootstrap.min.css" />

	<!-- Slick -->
	<link type="text/css" rel="stylesheet" href="/css/slick.css" />
	<link type="text/css" rel="stylesheet" href="/css/slick-theme.css" />

	<!-- nouislider -->
	<link type="text/css" rel="stylesheet" href="/css/nouislider.min.css" />

	<!-- Font Awesome Icon -->
	<link rel="stylesheet" href="/css/font-awesome.min.css">

	<!-- Custom stlylesheet -->
	<link type="text/css" rel="stylesheet" href="/css/style.css" />
</head>
<body>
	<!-- SECTION -->
	<div class="section">
		<!-- container -->
		<div class="container">
            <form method="post" asp-action="Index" asp-controller="CheckoutPage">
                <!-- row -->
                <div class="row">
                    <div class="col-md-7">
                        <!-- Billing Details -->
                        <div class="billing-details">
                            <div class="section-title">
                                <h3 class="title">THÔNG TIN ĐƠN HÀNG</h3>
                            </div>
                            <div class="form-group">
                                <input class="input" type="text" name="AccountId" placeholder="Tên người nhận">
                            </div>
                            <div class="form-group">
                                <input class="input" type="text" name="OrderDate" placeholder="Tên người nhận">
                            </div>
                            <div class="form-group">
                                <input class="input" type="text" name="ReceiverName" placeholder="Tên người nhận">
                            </div>
                            <div class="form-group">
                                <input class="input" type="text" name="Address" placeholder="Address">
                            </div>
                            <div class="form-group">
                                <input class="input" type="tel" name="PhoneNumber" placeholder="Số điện thoại">
                            </div>
                            <!--Payment method-->
                            <div class="payment-method">
                                <div class="input-radio">
                                    <input type="radio" name="PaymentMethod" id="payment-1">
                                    <label for="payment-1">
                                        <span></span>
                                        Chuyển khoản ngân hàng
                                    </label>
                                    <div class="caption">
                                        <img style="width:50%" src="~/img/QRcode.png" alt="">
                                    </div>
                                </div>
                                <div class="input-radio">
                                    <input type="radio" name="PaymentMethod" id="payment-2">
                                    <label for="payment-2">
                                        <span></span>
                                        Momo
                                    </label>
                                    <div class="caption">
                                        <img style="width:50%" src="~/img/QRcode.png" alt="">
                                    </div>
                                </div>
                                <div class="input-radio">
                                    <input type="radio" name="PaymentMethod" id="payment-3">
                                    <label for="payment-3">
                                        <span></span>
                                        Ship COD
                                    </label>
                                </div>
                            </div>
                        </div>
                        <!-- /Billing Details -->
                        <!-- Order notes -->
                        <div class="order-notes">
                            <textarea class="input" name="Note" type="text" placeholder="Order Notes"></textarea>
                        </div>
                        <!-- /Order notes -->
                    </div>

                    <!-- Order Details -->
                    <div class="col-md-5 order-details">
                        <div class="section-title text-center">
                            <h3 class="title">Your Order</h3>
                        </div>
                        <div class="order-summary">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>
                                            Hình ảnh
                                        </th>
                                        <th>
                                            Tên sản phẩm
                                        </th>
                                        <th>
                                            Số lượng
                                        </th>
                                        <th>
                                            Giá trị
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var cartDetail in cartDetails)
                                    {
                                        <tr>
                                            <td>
                                                <img style="width:100%" src="@cartDetail.Product.PhotoURL" alt="" />
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => cartDetail.Product.ProductName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => cartDetail.Quantity)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => cartDetail.TotalPrice)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <div class="order-col">
                                <div>Shiping</div>
                                <div><strong>FREE</strong></div>
                            </div>
                            <div class="order-col">
                                <div><strong>TOTAL</strong></div>
                                <div><strong class="order-total">@ViewBag.CartTotalValue</strong></div>
                            </div>
                        </div>
                        <input class ="primary-btn order-submit" type="submit" value="Đặt hàng" />
                    </div>
                    <!-- /Order Details -->
                </div>
                <!-- /row -->
			</form>
			
		</div>
		<!-- /container -->
	</div>
	<!-- /SECTION -->
	<!-- jQuery Plugins -->
	<script src="/js/jquery.min.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/slick.min.js"></script>
	<script src="/js/nouislider.min.js"></script>
	<script src="/js/jquery.zoom.min.js"></script>
	<script src="/js/main.js"></script>
</body>
</html>
